#include <iostream>
#include <vector>
#include <limits.h>

using namespace std;

int maxProduct(vector<int>& nums) {
    if (nums.size() < 2) {
        cout << "Array must have at least two elements." << endl;
        return 0;
    }

    int max1 = INT_MIN, max2 = INT_MIN;
    int min1 = INT_MAX, min2 = INT_MAX;

    // Traverse the array to find the two largest and two smallest numbers
    for (int i = 0; i < nums.size(); i++) {
        if (nums[i] > max1) {
            max2 = max1;
            max1 = nums[i];
        } else if (nums[i] > max2) {
            max2 = nums[i];
        }

        if (nums[i] < min1) {
            min2 = min1;
            min1 = nums[i];
        } else if (nums[i] < min2) {
            min2 = nums[i];
        }
    }

    // Maximum product from either two largest numbers or two smallest numbers
    return max(max1 * max2, min1 * min2);
}

int main() {
    vector<int> nums = {3, 5, -10, -2, 9, 7};

    int result = maxProduct(nums);
    cout << "Maximum Product: " << result << endl;

    return 0;
}
